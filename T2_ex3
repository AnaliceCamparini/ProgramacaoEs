#include <iostream>
#include<locale>
#include<cstdlib>

using namespace std;

int main(int argc, char** argv) {
   setlocale(LC_ALL,"Portuguese");
   float fah,cel;

   cout<<"Digite a temperatura em fahrenheit: ";
   cin>>fah;

   cel=((fah-32)*(5/9));

   cout<<"O valor da temperatura modificada para celsius foi de: "<<cel<<endl;

   }

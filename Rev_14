#include <iostream>
#include<iomanip>

using namespace std;

int main()
{
    float matriz[4][4];
    int i,j;
    float med[4][4];

    for(i=0;i<4;i++){
        for(j=0;j<4;j++){
            cout<<"Insira um número na posicão" <<i+1<<","<<j+i<<": ";
            cin>>matriz[i][j];
        }
    }
    for(i=0;i<4;i++){
        for(j=0;j<4;j++){
            cout<<matriz[i][j]<<"\t";

        }

        cout<<endl;
    }
    cout<<"A media dos numeros: "<<endl;
    for(i=0;i<4;i++){
        for(j=0;j<4;j++){
            med[i][j]=(matriz[i][j])/2.0;
            cout<<setprecision(2)<<med[i][j]<<"\t";

        }

        cout<<endl;
    }
    return 0;
}

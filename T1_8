#include <cstdlib>
#include<iostream>
using namespace std;

/*
 * 
 */
int main(int argc, char** argv) {
    char sexo;
    float altura,peso;
    
    cout<<"Insira seu sexo: ";
    cin>>sexo;
    cout<<"Insira sua altura: ";
    cin>>altura;
    
    switch(sexo){
        case 'F':
            peso=(62.1 * altura)- 44.7;
            cout<<"Você é do sexo feminino!"<<endl;
            cout<<"Sua altura é:"<<altura<<endl;
            cout<<"Seu peso ideal é: "<<peso<<endl;
            break;
        case 'M':
            peso=(72.7 * altura)- 58;
            cout<<"Você é do sexo masculino!"<<endl;
            cout<<"Sua altura é:"<<altura<<endl;
            cout<<"Seu peso ideal é: "<<peso<<endl;
            break;
    }
    return 0;
}

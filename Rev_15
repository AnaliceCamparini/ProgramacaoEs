
using namespace std;


int main()
{

    int cli,i;

    cout<<"Quantos clientes serÃ£o cadastrados? Informe: ";
    cin>>cli;
    fflush(stdin);

    struct cadastro{
    int id,rg,tel;
    char sex[2];
    string nome,nomeD,esp;

    }c1[cli];

    for(i=0;i<cli;i++){
        cout<<"INFORME O NOME DO PET: ";
        getline(cin,c1[i].nome);
        cout<<"A ESPECIE DO PET: ";
        getline(cin,c1[i].esp);
        cout<<"INFORME O SEXO DO PET(F-FEMIA|M-MACHO): ";
        cin>>c1[i].sex;
        cout<<"INFORME A IDADE DO PET: ";
        cin>>c1[i].id;
        fflush(stdin);
        cout<<"INFORME O NOME DO DONO DO PET: ";
        getline(cin,c1[i].nomeD);
        cout<<"INFORME O RG DO DONO DO PET: ";
        cin>>c1[i].rg;
        cout<<"INFORME O TELEFONE DO DONO DO PET(tudo junto): ";
        cin>>c1[i].tel;
        fflush(stdin);
        cout<<endl;


    }

    cout<<"---------------------------------------------------"<<endl;

    for(i=0;i<cli;i++){
        cout<<"O NOME DO PET: "<<c1[i].nome<<endl;
        cout<<"ESPECIE: "<<c1[i].esp<<endl;
        cout<<"SEXO DO PET: "<<c1[i].sex<<endl;
        cout<<"IDADE DO PET: "<<c1[i].id<<endl;
        cout<<"NOME DO DONO DO PET: "<<c1[i].nomeD<<endl;
        cout<<"RG DO DONO DO PET: "<<c1[i].rg<<endl;
        cout<<"TELEFONE DO DONO DO PET: "<<c1[i].tel<<endl;
        cout<<endl;
    }
    return 0;
}
